{
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "rootDirs": ["src"],
    "baseUrl": "./src",
    "outDir": "dist",
    "types": ["node"],
  }
}
